{
    "name": "snowpack-starter",
    "version": "1.0.0",
    "description": "Snowpack starter template",
    "main": "index.js",
    "scripts": {
        "prepare": "snowpack",
        "start": "snowpack dev",
        "build": "snowpack build --clean",
        "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
        "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/davi-mbatista/snowpack-starter.git"
    },
    "author": "@davi-mbatista",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/davi-mbatista/snowpack-starter/issues"
    },
    "dependencies": {
        "preact": "10.5.5"
    },
    "devDependencies": {
        "@prefresh/snowpack": "2.0.1",
        "@snowpack/app-scripts-preact": "1.9.5",
        "@snowpack/plugin-dotenv": "2.0.4",
        "@snowpack/plugin-run-script": "2.1.7",
        "@snowpack/plugin-typescript": "1.0.2",
        "@types/canvas-confetti": "1.0.0",
        "@types/snowpack-env": "2.3.0",
        "prettier": "2.0.5",
        "snowpack": "2.15.1",
        "typescript": "4.0.3"
    },
    "snowpack": {
        "mount": {
            "public": "/",
            "src": "/_dist_"
        },
        "plugins": [
            "@snowpack/plugin-dotenv",
            "@prefresh/snowpack",
            "@snowpack/plugin-typescript"
        ],
        "install": [
            "preact"
        ],
        "installOptions": {
            "installTypes": true
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid"
    }
}
