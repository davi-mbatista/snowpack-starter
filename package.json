{
    "name": "snowpack-starter",
    "version": "1.0.0",
    "description": "Snowpack starter template",
    "main": "index.js",
    "scripts": {
        "prepare": "snowpack install",
        "start": "snowpack dev",
        "serve": "npx serve ./build -l 5000",
        "build": "snowpack build --clean",
        "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
        "lint": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\"",
        "test:e2e": "jest --config jest/jest.e2e.config.js",
        "test:unit": "jest --config jest/jest.config.js",
        "test": "npm run test:unit && npm run test:e2e"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/davi-mbatista/snowpack-starter.git"
    },
    "author": "@davi-mbatista",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/davi-mbatista/snowpack-starter/issues"
    },
    "dependencies": {
        "preact": "10.5.7"
    },
    "devDependencies": {
        "@prefresh/snowpack": "2.1.0",
        "@snowpack/app-scripts-preact": "1.9.5",
        "@snowpack/plugin-dotenv": "2.0.4",
        "@snowpack/plugin-typescript": "1.1.0",
        "@testing-library/jest-dom": "5.11.6",
        "@testing-library/preact": "2.0.0",
        "@types/jest": "26.0.15",
        "@types/node": "14.14.10",
        "@types/snowpack-env": "2.3.2",
        "@types/testing-library__jest-dom": "5.9.5",
        "jest": "26.6.3",
        "jest-playwright-preset": "1.4.1",
        "npm-run-all": "4.1.5",
        "playwright": "1.6.2",
        "prettier": "2.2.0",
        "snowpack": "2.17.1",
        "ts-jest": "26.4.4",
        "typescript": "4.1.2"
    },
    "snowpack": {
        "mount": {
            "public": "/",
            "src": "/_dist_"
        },
        "plugins": [
            "@snowpack/plugin-dotenv",
            "@snowpack/plugin-typescript",
            "@prefresh/snowpack"
        ],
        "install": [
            "preact"
        ],
        "installOptions": {
            "installTypes": true
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "arrowParens": "avoid"
    }
}
